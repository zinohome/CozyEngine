# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=CozyEngine
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS (comma-separated list of origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# Security & Secrets (REQUIRED in production)
# ============================================================================
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# ============================================================================
# Database (REQUIRED in staging/production)
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/cozyengine
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ============================================================================
# Redis (Optional, but recommended)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# ============================================================================
# AI Providers (At least ONE required)
# ============================================================================

# OpenAI
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_ORG_ID=
OPENAI_BASE_URL=

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
ANTHROPIC_BASE_URL=

# Ollama (for local models)
OLLAMA_BASE_URL=http://localhost:11434

# ============================================================================
# Personalization Engines (Optional)
# ============================================================================

# Cognee (Knowledge Engine)
COGNEE_API_URL=
COGNEE_API_TOKEN=

# Memobase (Knowledge Engine alternative)
MEMOBASE_PROJECT_URL=
MEMOBASE_API_KEY=

# Mem0 (Chat Memory Engine)
MEM0_API_URL=
MEM0_API_KEY=

# ============================================================================
# Observability (Optional)
# ============================================================================

# OpenTelemetry
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=cozyengine

# Sentry
SENTRY_DSN=
SENTRY_ENABLED=false
SENTRY_ENVIRONMENT=development

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_METRICS=true
ENABLE_TRACING=false
